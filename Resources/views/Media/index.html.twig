{% extends 'ACInst3Bundle::admin_layout.html.twig' %}

{% block content_in %}
<h1>Media list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Gallery</th>
            <th>Title</th>
            <th>Description</th>
            <th>Datetime</th>
            <th>Formats</th>
            <th>Thumbnail</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('admin_media_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
			<td>{% if entity.gallery %}<a href="{{ path('admin_gallery_show', { 'id': entity.gallery.id }) }}"> {{ entity.gallery.title }} ({{ entity.gallery.id }}) </a> {% endif %}</td>
            <td>{{ entity.title }}</td>
            <td>{{ entity.description }}</td>
            <td>{{ entity.datetime|date("d - m - Y") }}</td>
            <td>{{ entity.formats.count }}</td>
			<td>{% if entity.thumbnail %} {{ entity.thumbnail.id }} {% endif %}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_media_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_media_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('admin_media_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}
