{% extends 'ACInst3Bundle::admin_layout.html.twig' %}

{% block content_in %}
<h1>Gallery</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ entity.title }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ entity.description }}</td>
        </tr>
        <tr>
            <th>Datetime</th>
            <td>{{ entity.datetime|date("d - m - Y") }}</td>
        </tr>
        <tr>
            <th>Cover</th>
            <td>{% if entity.cover %}
				<a href="{{ path('admin_media_show', { 'id': entity.cover.id }) }}">
					{{ entity.cover.title }}({{ entity.cover.id }})
				</a>
            {% endif %}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('admin_gallery') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('admin_gallery_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('admin_gallery_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
