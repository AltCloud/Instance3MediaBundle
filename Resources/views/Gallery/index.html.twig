{% extends 'ACInst3Bundle::admin_layout.html.twig' %}

{% block content_in %}
<h1>Gallery list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Description</th>
            <th>Datetime</th>
            <th>Cover</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('admin_gallery_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.title }}</td>
            <td>{{ entity.description }}</td>
            <td>{{ entity.datetime|date("d - m - Y") }}</td>
            <td>{% if entity.cover %}
				<a href="{{ path('admin_media_show', { 'id': entity.cover.id }) }}">
					{{ entity.cover.title }}({{ entity.cover.id }})
				</a>
            {% endif %}</td> 
           <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_gallery_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_gallery_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('admin_gallery_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}
